<div class="form-group">
    <label for="name">Название</label>
    <input type="text" name="name" value="{{ item.name }}" class="form-control" id="name">
</div>
<div class="form-group">
    <label for="category_id">Категория</label>
    <select name="category_id" id="category_id">
        {% for category in  categories %}
            <option value="{{ category.id }}" {% if(category.id==item.category_id) %}selected{% endif %} {% if(category.parent_id == null) %}disabled{% endif %}>{{ category.name }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label for="price">Цена</label>
    <input type="text" name="price" class="form-control" value="{{ item.price }}" id="price">
</div>
<div class="form-group">
    <label for="photo">Фото</label>
    <input type="text" name="photo" class="form-control" value="{{ item.photo }}" id="photo">
</div>
<div class="form-group">
    <label for="info">Описание</label>
    <textarea name="info" class="form-control" id="info">{{ item.info }}</textarea>
</div>
<div class="form-group">
    <button class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="/admin/items">Отмена</a>
</div>