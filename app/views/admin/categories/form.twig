<div class="form-group">
    <label for="name">Название</label>
    <input type="text" name="name" value="{{ category.name }}" class="form-control" id="name">
</div>
<div class="form-group">
    <label for="parent_id">Родительская категория</label>
    <select name="parent_id" id="parent_id">
        <option value=""></option>
        {% for parent in  categories %}
            <option value="{{ parent.id }}" {% if(parent.id==category.parent_id) %}selected{% endif %}>{{ parent.name }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <button class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="/admin/categories">Отмена</a>
</div>