{% extends "layouts/main.twig" %}
{% block title %}{{ category.name }} - магазин мебели{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ category.name }}</h2>
            <div class="row">
            {% set col = 1 %}
            {% for item in items %}
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-header">
                            {{ item.category }}
                        </div>
                        <div class="card-body">
                            {% if item.photo !='' %}
                                <img src="{{ item.photo }}" width="200">
                            {% endif %}
                            <p>{{ item.name }}</p>
                            <p><em>{{ item.info }}</em></p>
                            <p><strong>{{ item.price }} Р.</strong></p>
                        </div>
                        <div class="card-footer">
                            <a href="/item/{{ item.id }}" class="btn btn-primary">купить</a>
                        </div>
                    </div>
                </div>
                {% if col == 4 %}<div class="w-100"></div>{% set col = 1 %}{% endif %}
            {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
            <a href="/" class="btn btn-lg btn-info">на главную</a>
        </div>
    </div>
{% endblock %}
